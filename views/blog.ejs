<%include partials/header%>
<div class="container">
	<header>
		<div class="container">
			<h1>Welcome to my Blog</h1>
		</div>
		<a href="/blog/new" class="btn btn-primary">Add New Post</a>
	</header>
</div>
<div class="container">
	<div class="post">
		<%posts.forEach(function(post){ %>
			<div class="col-md-12">
				<h1><%=post.title%></h1>
				<div>
					<img src="<%=post.image%>">
					<p>
						<a class="btn btn-primary" href="/blog/<%= post._id %>">More</a>
					</p>	
				</div>
				<p><%=post.content%></p>
			</div>
		<% }); %>
	</div>
</div>
<%include partials/footer%>
